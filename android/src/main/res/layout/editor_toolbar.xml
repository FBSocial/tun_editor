<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/action_undo"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Undo"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_redo"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Redo"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_bold"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Bold"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_italic"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Italic"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_underline"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Underline"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_strike_through"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Through"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_headline_1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Headline1"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_headline_2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Headline2"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_headline_3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Headline3"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/action_clear"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Clear"
            android:paddingHorizontal="20dp"
            android:contentDescription="@null" />
    </LinearLayout>

</HorizontalScrollView>
